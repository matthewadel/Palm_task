<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for development -->
    <domain-config cleartextTrafficPermitted="true">
        <!-- Add your specific domains here -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android emulator -->
        <domain includeSubdomains="true">10.0.3.2</domain> <!-- Genymotion emulator -->
        <domain includeSubdomains="true">192.168.1.0/24</domain> <!-- Local network -->
        <!-- Add your API domain here if using HTTP -->
        <!-- <domain includeSubdomains="true">your-api-domain.com</domain> -->
    </domain-config>
</network-security-config>
